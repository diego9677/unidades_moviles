# ==============================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# ==============================================

# IMPORTANTE: Copia este archivo a .env y modifica los valores

# ==============================================
# CONFIGURACIÓN DE DJANGO
# ==============================================
DEBUG=False
SECRET_KEY=CAMBIA-ESTE-SECRET-KEY-POR-UNO-SEGURO-Y-ALEATORIO
ALLOWED_HOSTS=tudominio.com,www.tudominio.com
CSRF_TRUSTED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL)
# ==============================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=unidades_moviles_prod
DATABASE_USER=unidades_moviles_user
DATABASE_PASSWORD=CAMBIA-ESTE-PASSWORD-POR-UNO-SEGURO
DATABASE_HOST=db
DATABASE_PORT=5432

# Configuración para el contenedor de PostgreSQL
POSTGRES_DB=unidades_moviles_prod
POSTGRES_USER=unidades_moviles_user
POSTGRES_PASSWORD=CAMBIA-ESTE-PASSWORD-POR-UNO-SEGURO

# ==============================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# ==============================================
STATIC_ROOT=/app/static_root
MEDIA_ROOT=/app/media_root

# ==============================================
# CONFIGURACIÓN DE VMIX/MEDIAMTX
# ==============================================
# URL del servidor MediaMTX/vMix para el proxy WHEP
VMIX_HOST=http://tu-servidor-mediamtx:8889

# ==============================================
# CONFIGURACIÓN DE DJANGO
# ==============================================
DEBUG=True
SECRET_KEY=django-insecure-docker-hardcoded-key-12345
ALLOWED_HOSTS=*
CSRF_TRUSTED_ORIGINS=https://localhost,https://127.0.0.1

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS (PostgreSQL)
# ==============================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=unidades_moviles
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=db
DATABASE_PORT=5432

# Configuración para el contenedor de PostgreSQL
POSTGRES_DB=unidades_moviles
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ==============================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# ==============================================
STATIC_ROOT=/app/static_root
MEDIA_ROOT=/app/media_root

# ==============================================
# CONFIGURACIÓN DE VMIX/MEDIAMTX
# ==============================================
# URL del servidor MediaMTX/vMix para el proxy WHEP
# Ejemplos:
#   - Servidor local en host: http://host.docker.internal:8889
#   - Servidor en red local: http://192.168.1.50:8889
#   - Servidor externo: http://servidor.example.com:8889
VMIX_HOST=http://host.docker.internal:8889
